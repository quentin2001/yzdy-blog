---
import { SITE, SKILLSSHOWCASE_CONFIG, SOCIAL_LINKS } from '~/config.ts'
import { GITHUB_CONFIG, POSTS_CONFIG } from '~/config.ts'
import Layout from '~/layouts/Layout.astro'
import SectionDivider from '~/components/base/SectionDivider.astro'
import GithubContributions from '~/components/base/GithubContributions.tsx'
import SocialLink from '~/components/base/SocialLink.astro'
import List from '~/components/posts/card/List.astro'
import SkillsShowcase from '~/components/base/SkillsShowcase.astro'
import { getNumPosts, getPinnedPosts } from '~/lib/data'

const { ENABLED, GITHUB_USERNAME, TOOLTIP_ENABLED } = GITHUB_CONFIG
const { size, type } = POSTS_CONFIG.homePageConfig
const { SKILLS_ENABLED, SKILLS_DATA } = SKILLSSHOWCASE_CONFIG

let showPosts = []
const pinnedPosts = await getPinnedPosts()
const hasPinnedPosts = pinnedPosts.length > 0
if (hasPinnedPosts) {
  showPosts = pinnedPosts
} else {
  showPosts = await getNumPosts(size)
}
---

<Layout title="space" description={SITE.description}>
  <div class="relative z-[1]">
    <!-- 使用 grid 做真正的左右布局，彻底解决覆盖问题 -->
    <div class="relative py-8 pb-10 px-6 sm:px-8 grid grid-cols-1 md:grid-cols-[1fr_230px] gap-8 items-start">
      <!-- 左侧文本区 -->
      <div class="max-w-2xl">
        <h1 class="flex flex-col gap-2">
          <span class="text-4xl sm:text-5xl tracking-tight">杨卓's blog</span>
          <span class="text-muted-foreground font-light text-xl sm:text-2xl block tracking-wide text-balance">ENFJ</span>
        </h1>
        <div class="pro text-muted-foreground text-pretty mt-4">
          <p>
            Hi, I'm Quentin —
            充满好奇、喜欢摄影、痴迷于AI。在这里，我分享自己在学习AI和探索AI应用过程中所做的学习笔记、项目记录，以及思维碎片。欢迎来到我的空间，或许你会发现一些能点燃你好奇心的东西。
          </p>
          <p>
            如果您对我的项目或文章有任何问题或建议，欢迎联系我。或者单纯想和我聊聊~ 您可以通过
            <a href="mailto:yzdyonly@gmail.com" target="_blank" rel="nofollow noreferrer">yzdyonly@gmail.com</a>或
            <a href="https://juejin.cn/user/1416608279436087" target="_blank" rel="nofollow noreferrer">@sdguy</a>
          </p>
        </div>
      </div>

      <!-- 右侧照片（漂浮 / 动效保持不变） -->
      <div class="hidden md:block">
        <img
          src="/me.png"
          alt="My photo"
          class="w-full h-auto rounded-3xl shadow-2xl opacity-80 backdrop-blur-sm transition-all duration-500 hover:opacity-100 hover:scale-[1.02]"
        />
      </div>
    </div>
    {
      ENABLED && (
        <>
          <SectionDivider />
          <div class="py-8 pb-10 px-6 max-md:px-6">
            <div class="px-2 max-md:px-0">
              <h2 class="text-2xl sm:text-3xl">Spotlight</h2>
              <p class="text-muted-foreground mb-6 mt-1">Most recent contributions.</p>
            </div>
            <GithubContributions username={GITHUB_USERNAME} tooltipEnabled={TOOLTIP_ENABLED} client:load transition:animate="none" />
          </div>
        </>
      )
    }
    <SectionDivider />

    <div class="py-8 pb-10 px-6 sm:px-8">
      <h2 class="text-2xl sm:text-3xl tracking-tight">博客</h2>
      <p class="text-muted-foreground mb-6 mt-1">
        {hasPinnedPosts ? `置顶` : '最近的'}
        {showPosts.length} 博客, 值得一看~
      </p>
      <List posts={showPosts} {type} coverLayout={POSTS_CONFIG.homePageConfig?.coverLayout} />
    </div>
  </div>
</Layout>
